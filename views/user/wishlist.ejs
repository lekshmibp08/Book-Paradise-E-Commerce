
<%- include("../partials/header") %>
        
        
        <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/">Pages</a></li>
                    <li class="breadcrumb-item active">Wishlist</li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        
        <!-- Wishlist Start -->
        <div class="cart-page">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <% if(products.length === 0) { %>
                                <h3 style="text-align: center; color: #3F69AA;">Empty Wishlist</h3>
                                <a href="/products" style="text-align: center;"><p>Add Products to Purchase</p></a>
                            <% } else { %>
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Stock Status</th>
                                        <th>Add to Cart</th>
                                        <th>Remove</th>
                                    </tr>
                                </thead>
                                <tbody class="align-middle">
                                    <% products.forEach(function(product) { %>
                                        <tr>
                                            <td>
                                                <a href="/productDetails?id=<%= product.id %>">
                                                    <% if (product.productImage && product.productImage.length > 0) { %>
                                                        <img src="/uploads/product-images/<%= product.productImage[0] %>" alt="Image">
                                                    <% } else { %>
                                                        <img src="/path/to/default-image.jpg" alt="Default Image">
                                                    <% } %>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/productDetails?id=<%= product.id %>">
                                                    <%= product.productName %>
                                                </a>
                                                <p>By <%= product.authorTitle %></p>
                                            </td>
                                            <td>â‚¹ <%= product.salePrice %></td> 
                                            <td>
                                                <% if (product.quantity > 0 ) { %>
                                                    <p>In Stock</p>
                                                <% } else { %>
                                                    <p style="color: red">Out Of Stock</p>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="#" onclick="addToCartFromWishlist('<%= product._id %>')">Add to Cart</a>                                            
                                            </td>
                                            <!--
                                            <td><button onclick="addToCart('<%=product._Id%>')">
                                                Add to Cart</button>                                            
                                            </td>
                                            -->
                                            <td><button class="remove-from-wishlist" data-product-id="<%= product._id %>">
                                                <a style="color: red;" href="/deleteWishlist?id=<%= product._id %>"><i class="fa fa-trash"></i></a></button></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <!-- Wishlist End -->
        

        <script>
            function addToCartFromWishlist(productId) {
                $.ajax({
                    url: '/wishlist/add-to-cart/' + productId,
                    method: 'GET',
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                title: 'Success',
                                text: response.message,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then(() => {
                                window.location.href = '/wishlist';
                            });
                        } else {
                            Swal.fire({
                                title: 'Error',
                                text: response.message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            title: 'Error',
                            text: 'An error occurred while adding the product to the cart.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            }
            </script>        

<%- include("../partials/footer") %>

        
