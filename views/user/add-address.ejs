
<style>
    body {
        font-family: Arial, sans-serif;
    }

    .address-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    form label {
        margin-bottom: 5px;
        font-weight: bold;
    }

    form input, form select {
        margin-bottom: 15px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    form button {
        padding: 10px;
        font-size: 16px;
        background-color: #3F69AA;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    form button:hover {
        background-color: #0f9308;
    }
</style>

<%- include("../partials/header") %>

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/profile">My Account</a></li>
            <li class="breadcrumb-item"><a href="/profile?tab=address">Address</a></li>
            <li class="breadcrumb-item active">Add-Address</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->

<div class="address-container">
    <h2>Add New Address</h2>
    <form action="/add-new-address" method="post" id="addressForm">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" >
        <div class="alert" id="nameAlert" style="display:none; color: red;"></div>

        <label for="mobile">Mobile</label>
        <input type="text" id="mobile" name="mobile" required>
        <div class="alert" id="mobileAlert" style="display:none; color: red;"></div>

        <label for="address">Address</label>
        <input type="text" id="address" name="address" required>
        <div class="alert" id="addressAlert" style="display:none; color: red;"></div>

        <label for="locality">Locality</label>
        <input type="text" id="locality" name="locality" required>
        <div class="alert" id="localityAlert" style="display:none; color: red;"></div>

        <label for="city">City</label>
        <input type="text" id="city" name="city" required>
        <div class="alert" id="cityAlert" style="display:none; color: red;"></div>

        <label for="state">State</label>
        <input type="text" id="state" name="state" required>
        <div class="alert" id="stateAlert" style="display:none; color: red;"></div>

        <label for="pincode">Pincode</label>
        <input type="text" id="pincode" name="pincode" required>
        <div class="alert" id="pincodeAlert" style="display:none; color: red;"></div>

        <label for="addressType">Address Type</label>
        <select id="addressType" name="addressType" required>
            <option value="home">Home</option>
            <option value="office">Office</option>
            <option value="other">Other</option>
        </select>
        <div class="alert" id="addressTypeAlert" style="display:none; color: red;"></div>

        <label for="default">Set as Default</label>
        <input type="checkbox" id="default" name="default">

        <button type="submit">Add Address</button>
    </form>
</div>


<%- include("../partials/footer") %>

<script>
    document.getElementById('addressForm').addEventListener('submit', function(event) {
        const nameInput = document.getElementById('name');
        const mobileInput = document.getElementById('mobile');
        const addressInput = document.getElementById('address');
        const localityInput = document.getElementById('locality');
        const cityInput = document.getElementById('city');
        const stateInput = document.getElementById('state');
        const pincodeInput = document.getElementById('pincode');

        const nameAlert = document.getElementById('nameAlert');
        const mobileAlert = document.getElementById('mobileAlert');
        const addressAlert = document.getElementById('addressAlert');
        const localityAlert = document.getElementById('localityAlert');
        const cityAlert = document.getElementById('cityAlert');
        const stateAlert = document.getElementById('stateAlert');
        const pincodeAlert = document.getElementById('pincodeAlert');

        let errorMessage = '';

        if (nameInput.value.trim() === '') {
            errorMessage = 'Name cannot be empty or just spaces.';
            nameAlert.textContent = errorMessage;
            nameAlert.style.display = 'block';
            nameInput.focus();
            event.preventDefault();
        } else {
            nameAlert.style.display = 'none';
        }

        if (!/^\d{10}$/.test(mobileInput.value.trim())) {
            errorMessage = 'Mobile number must be a 10-digit number.';
            mobileAlert.textContent = errorMessage;
            mobileAlert.style.display = 'block';
            mobileInput.focus();
            event.preventDefault();
        } else {
            mobileAlert.style.display = 'none';
        }

        if (addressInput.value.trim() === '') {
            errorMessage = 'Address cannot be empty or just spaces.';
            addressAlert.textContent = errorMessage;
            addressAlert.style.display = 'block';
            addressInput.focus();
            event.preventDefault();
        } else {
            addressAlert.style.display = 'none';
        }

        if (localityInput.value.trim() === '') {
            errorMessage = 'Locality cannot be empty or just spaces.';
            localityAlert.textContent = errorMessage;
            localityAlert.style.display = 'block';
            localityInput.focus();
            event.preventDefault();
        } else {
            localityAlert.style.display = 'none';
        }

        if (cityInput.value.trim() === '') {
            errorMessage = 'City cannot be empty or just spaces.';
            cityAlert.textContent = errorMessage;
            cityAlert.style.display = 'block';
            cityInput.focus();
            event.preventDefault();
        } else {
            cityAlert.style.display = 'none';
        }

        if (stateInput.value.trim() === '') {
            errorMessage = 'State cannot be empty or just spaces.';
            stateAlert.textContent = errorMessage;
            stateAlert.style.display = 'block';
            stateInput.focus();
            event.preventDefault();
        } else {
            stateAlert.style.display = 'none';
        }

        if (!/^\d{6}$/.test(pincodeInput.value.trim())) {
            errorMessage = 'Pincode must be a 6-digit number.';
            pincodeAlert.textContent = errorMessage;
            pincodeAlert.style.display = 'block';
            pincodeInput.focus();
            event.preventDefault();
        } else {
            pincodeAlert.style.display = 'none';
        }
    });
</script>